<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            color: #333;
        }
        .container {
            width: 100%;
            margin: 20px auto;
            padding: 20px;
        }
        h2 {
            color: #444;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 30px;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
        a {
            color: #0275d8;
            text-decoration: none;
        }
        a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="container">
        {% for standard, paths in standards.items() %}
            <h2>{{ standard }}</h2>
            <table>
                <tr>
                    <th>Path</th>
                    <th>URL</th>
                </tr>
                {% for path, url in paths.items() %}
                    <tr>
                        <td>{{ path }}</td>
                        <td><a href="{{ url }}">{{ url }}</a></td>
                    </tr>
                {% endfor %}
            </table>
        {% endfor %}
    </div>
</body>
</html>
